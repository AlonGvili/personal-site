{
  "name": "personal-site",
  "alias": "site.sergiodxa.com",
  "type": "static",
  "env": {
    "NODE_ENV": "@env"
  },
  "static": {
    "headers": [
      {
        "source": "**/*.@(jpg|jpeg|gif|png|js|)",
        "headers": [{
          "key": "Cache-Control",
          "value" : "public, immutable, max-age=31536000"
        }]
      },
      {
        "source": "**/*.html",
        "headers": [{
          "key": "Cache-Control",
          "value": "no-cache"
        }]
      }
    ],
    "directoryListing": false
  }
}
